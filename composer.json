{
    "name": "hi-folks/statistics",
    "description": "PHP package that provides functions for calculating mathematical statistics of numeric data.",
    "keywords": [
        "hi-folks",
        "statistics"
    ],
    "homepage": "https://github.com/hi-folks/statistics",
    "license": "MIT",
    "authors": [
        {
            "name": "Roberto B.",
            "email": "roberto.butti@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^2",
        "phpstan/phpstan": "^1.3",
        "rector/rector": "^0.17.0"
    },
    "autoload": {
        "psr-4": {
            "HiFolks\\Statistics\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HiFolks\\Statistics\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "PHP_CS_FIXER_IGNORE_ENV=1 vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "static-code": "vendor/bin/phpstan analyse -c phpstan.neon",
        "all-check": [
            "@format",
            "@test",
            "@static-code"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
